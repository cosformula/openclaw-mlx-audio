{
  "id": "openclaw-mlx-audio",
  "name": "mlx-audio",
  "displayName": "MLX Audio (Local TTS)",
  "description": "Local TTS on Apple Silicon via mlx-audio. Zero API key, zero cloud.",
  "version": "0.1.5",
  "skills": ["skills/mlx-audio"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "port": { "type": "integer", "minimum": 1, "maximum": 65535, "default": 19280, "description": "Public OpenAI-compatible TTS endpoint port" },
      "proxyPort": { "type": "integer", "minimum": 1, "maximum": 65535, "description": "Legacy compatibility field. If set, port=mlx_audio.server and proxyPort=public endpoint" },
      "model": { "type": "string", "minLength": 1, "default": "mlx-community/Kokoro-82M-bf16", "description": "HuggingFace model ID" },
      "pythonEnvMode": {
        "type": "string",
        "enum": ["managed", "external"],
        "default": "managed",
        "description": "Python runtime mode: managed venv or external environment"
      },
      "pythonExecutable": {
        "type": "string",
        "description": "Python executable for external mode (for example, /opt/homebrew/bin/python3.12)"
      },
      "speed": { "type": "number", "exclusiveMinimum": 0, "default": 1.0 },
      "langCode": { "type": "string", "minLength": 1, "default": "a", "description": "Language code: a=English, z=Chinese, j=Japanese" },
      "refAudio": { "type": "string", "description": "Path to reference audio for voice clone" },
      "refText": { "type": "string", "description": "Transcript of reference audio" },
      "instruct": { "type": "string", "description": "Voice design instruction (Qwen3 VoiceDesign only)" },
      "temperature": { "type": "number", "minimum": 0, "default": 0.7 },
      "topP": { "type": "number", "exclusiveMinimum": 0, "maximum": 1, "default": 0.95 },
      "topK": { "type": "integer", "minimum": 1, "default": 40 },
      "repetitionPenalty": { "type": "number", "exclusiveMinimum": 0, "default": 1.0 },
      "autoStart": { "type": "boolean", "default": true },
      "healthCheckIntervalMs": { "type": "integer", "minimum": 1000, "default": 30000 },
      "restartOnCrash": { "type": "boolean", "default": true },
      "maxRestarts": { "type": "integer", "minimum": 0, "default": 3 },
      "workers": { "type": "integer", "minimum": 1, "default": 1, "description": "Number of uvicorn workers (reduce for low-memory machines)" }
    }
  },
  "uiHints": {
    "port": { "label": "TTS Port" },
    "proxyPort": { "label": "Legacy Proxy Port" },
    "model": { "label": "Model", "placeholder": "mlx-community/Kokoro-82M-bf16" },
    "pythonEnvMode": { "label": "Python Env Mode" },
    "pythonExecutable": { "label": "Python Executable", "placeholder": "/opt/homebrew/bin/python3.12" },
    "refAudio": { "label": "Reference Audio Path" },
    "refText": { "label": "Reference Audio Text" }
  }
}
