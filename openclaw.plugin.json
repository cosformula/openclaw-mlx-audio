{
  "id": "openclaw-mlx-audio",
  "name": "mlx-audio",
  "displayName": "MLX Audio (Local TTS)",
  "description": "Local TTS on Apple Silicon via mlx-audio. Zero API key, zero cloud.",
  "version": "0.1.0",
  "skills": ["skills/mlx-audio"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "port": { "type": "number", "default": 19280, "description": "mlx_audio.server port" },
      "proxyPort": { "type": "number", "default": 19281, "description": "Proxy port" },
      "model": { "type": "string", "default": "mlx-community/Kokoro-82M-bf16", "description": "HuggingFace model ID" },
      "speed": { "type": "number", "default": 1.0 },
      "langCode": { "type": "string", "default": "a", "description": "Language code: a=English, z=Chinese, j=Japanese" },
      "refAudio": { "type": "string", "description": "Path to reference audio for voice clone" },
      "refText": { "type": "string", "description": "Transcript of reference audio" },
      "instruct": { "type": "string", "description": "Voice design instruction (Qwen3 VoiceDesign only)" },
      "temperature": { "type": "number", "default": 0.7 },
      "topP": { "type": "number", "default": 0.95 },
      "topK": { "type": "number", "default": 40 },
      "repetitionPenalty": { "type": "number", "default": 1.0 },
      "autoStart": { "type": "boolean", "default": true },
      "healthCheckIntervalMs": { "type": "number", "default": 30000 },
      "restartOnCrash": { "type": "boolean", "default": true },
      "maxRestarts": { "type": "number", "default": 3 },
      "workers": { "type": "number", "default": 1, "description": "Number of uvicorn workers (reduce for low-memory machines)" }
    }
  },
  "uiHints": {
    "port": { "label": "Server Port" },
    "proxyPort": { "label": "Proxy Port" },
    "model": { "label": "Model", "placeholder": "mlx-community/Kokoro-82M-bf16" },
    "refAudio": { "label": "Reference Audio Path" },
    "refText": { "label": "Reference Audio Text" }
  }
}
